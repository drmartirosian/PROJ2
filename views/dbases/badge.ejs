<%- include('../partials/header') %>

<h3>My Badge</h3>




<div class="d-flex p-6 ">
    <% if (users._id.equals(user && user._id)) { %>
        <% users.badge.forEach(function(x) { %>
        <form action="/dbases/new" method="POST" class=" p-2"> 
            <input placeholder="<%= x.fullname %>" type="text" name="fullname">
            <br>
            <input placeholder="<%= x.codertype %>" type="text" name="codertype">
            <br>
            <input placeholder="<%= x.phone %>" type="number" name="phone">
            <br>
            <button class="badge badge-info " type="submit">UPDATE</button>
        </form>
        <% }); %>
    <% } else { %>
        <div class="">
            <% users.badge.forEach(function(x) { %>
                <div class="card d-inline-flex p-4" style="width: 18rem;">
                    <img src="" class="card-img-top" alt="USERPIC">
                    <div class="">
                        <h4 class="card-title">Hello, My Name Is: <h6><%= x.fullname %></6></h4>
                        <hr>
                        <p class="card-text">Background: <%= x.codertype %></p>
                        <p class="card-text">Contact: <%= x.phone %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    <% }%>
</div>



  
        

 





